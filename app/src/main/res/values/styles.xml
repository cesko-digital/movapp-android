<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AboutHeading">
        <item name="android:paddingTop">@dimen/about_padding_section</item>
        <item name="android:paddingBottom">@dimen/about_padding_section</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/about_headline_text</item>
    </style>

    <style name="AboutClickable" parent="AboutNormal">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="AboutNormal">
        <item name="android:textColor">@color/linkTextColor</item>
        <item name="android:paddingTop">@dimen/about_padding_item</item>
        <item name="android:paddingBottom">@dimen/about_padding_item</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="android:textSize">@dimen/about_item_text_standard</item>
    </style>

    <style name="ExerciseRadioButton">
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>
</resources>