<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/general_padding"
    android:paddingEnd="@dimen/general_padding"
    >

    <LinearLayout
        android:id="@+id/layout_dictionary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_favorites"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_baseline_star_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/secondaryTextColor"
                    android:text="From"
                    android:textSize="20sp" />

            </LinearLayout>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dividerColor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/layout_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_toLeftOf="@+id/image_play_sound"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_to_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Trans]"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_play_sound"
                    android:layout_width="@dimen/playSize"
                    android:layout_height="@dimen/playSize"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="play transcription"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_play" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>