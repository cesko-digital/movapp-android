<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_logo"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                style="@style/AboutHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_project" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_about_web"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_web" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />


                <TextView
                    android:id="@+id/text_about_twitter"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_twitter" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/text_about_facebook"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/text_about_instagram"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_instagram" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/text_about_linkedin"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/linkedin" />

            </LinearLayout>

            <TextView
                style="@style/AboutHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_application" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_about_suggestion"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_report" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />

                <TextView
                    android:id="@+id/text_about_github"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/github" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dividerColor" />


                <TextView
                    android:id="@+id/text_about_license"
                    style="@style/AboutClickable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_license" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/text_about_version"
                style="@style/AboutNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_version" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/text_about_build"
                style="@style/AboutNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_build" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dividerColor" />


            <TextView
                style="@style/AboutHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semi_bold"
                android:paddingBottom="4dp"
                android:text="@string/about_authors"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/AboutNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Václav Chlumský, Ondřej Málek" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

