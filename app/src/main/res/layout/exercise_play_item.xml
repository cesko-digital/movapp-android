<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDictionaryItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingVertical="@dimen/list_items_inline_with_searchbar_padding_sides"
    android:paddingHorizontal="@dimen/list_items_inline_with_searchbar_half_padding_sides"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/exercise_play_item_selector">

    <TextView
        android:id="@+id/text_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="FromTO"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="18sp"
        android:textSize="20sp"
        android:maxLines="1"
        android:gravity="center"
        android:textColor="@color/exercise_play_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>